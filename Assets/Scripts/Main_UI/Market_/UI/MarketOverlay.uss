/* =========================================
   MarketOverlay.uss
   Bloomberg風マーケットUI - アークナイツスタイル
   ========================================= */

/* =========================================
   ルートオーバーレイ（全画面覆い）
   ========================================= */
.market-overlay-root {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(5, 5, 8, 0.92);
    opacity: 0;
    transition-property: opacity;
    transition-duration: 0.3s;
}

.market-overlay-root.visible {
    opacity: 1;
}

/* =========================================
   メインレイアウト
   ========================================= */
.market-main-layout {
    flex-grow: 1;
    flex-direction: row;
    padding: 15px;
}

/* =========================================
   ヘッダー
   ========================================= */
.market-header {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 10px 20px;
    border-bottom-width: 1px;
    border-bottom-color: rgba(255, 80, 0, 0.3);
    background-color: rgba(0, 0, 0, 0.5);
}

.market-title {
    font-size: 18px;
    color: #ff5000;
    letter-spacing: 6px;
    -unity-font-style: bold;
}

.market-time {
    font-size: 14px;
    color: #888;
    letter-spacing: 2px;
}

.close-btn {
    width: 40px;
    height: 40px;
    background-color: transparent;
    border-width: 1px;
    border-color: #333;
    color: #888;
    font-size: 24px;
    transition-property: color, border-color, background-color;
    transition-duration: 0.15s;
}

.close-btn:hover {
    color: #ff5000;
    border-color: #ff5000;
    background-color: rgba(255, 80, 0, 0.1);
}

/* =========================================
   左パネル：資産情報
   ========================================= */
.left-panel {
    width: 250px;
    margin-right: 15px;
    flex-direction: column;
}

.asset-panel {
    background-color: rgba(10, 10, 12, 0.8);
    border-width: 1px;
    border-color: #1a1a1f;
    border-left-width: 3px;
    border-left-color: #fbbf24;
    padding: 15px;
    margin-bottom: 15px;
}

.panel-title {
    font-size: 11px;
    color: #555;
    letter-spacing: 3px;
    margin-bottom: 10px;
    padding-bottom: 8px;
    border-bottom-width: 1px;
    border-bottom-color: #222;
}

.asset-row {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 6px 0;
}

.asset-label {
    font-size: 12px;
    color: #888;
}

.asset-value {
    font-size: 16px;
    color: #fbbf24;
    -unity-font-style: bold;
    letter-spacing: 1px;
}

.asset-value.positive {
    color: #4ade80;
}

.asset-value.negative {
    color: #ef4444;
}

/* ロドス株パネル */
.rhodos-panel {
    border-left-color: #3b82f6;
}

.rhodos-stock-price {
    font-size: 28px;
    color: #3b82f6;
    -unity-font-style: bold;
    -unity-text-align: middle-center;
    margin: 10px 0;
}

.rhodos-rank {
    font-size: 14px;
    color: #888;
    -unity-text-align: middle-center;
    padding: 5px 10px;
    background-color: rgba(59, 130, 246, 0.1);
    border-width: 1px;
    border-color: rgba(59, 130, 246, 0.3);
}

.rhodos-rank.rank-high {
    color: #4ade80;
    background-color: rgba(74, 222, 128, 0.1);
    border-color: rgba(74, 222, 128, 0.3);
}

.rhodos-rank.rank-super {
    color: #fbbf24;
    background-color: rgba(251, 191, 36, 0.1);
    border-color: rgba(251, 191, 36, 0.3);
}

.rhodos-rank.rank-god {
    color: #ff5000;
    background-color: rgba(255, 80, 0, 0.2);
    border-color: rgba(255, 80, 0, 0.5);
}

.dividend-timer {
    font-size: 12px;
    color: #666;
    -unity-text-align: middle-center;
    margin-top: 10px;
}

/* ポートフォリオパネル */
.portfolio-panel {
    flex-grow: 1;
    border-left-color: #4ade80;
}

.portfolio-list {
    flex-grow: 1;
}

.portfolio-item {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 8px 5px;
    border-bottom-width: 1px;
    border-bottom-color: rgba(255, 255, 255, 0.03);
}

.portfolio-stock-name {
    font-size: 13px;
    color: #ccc;
    flex-grow: 1;
}

.portfolio-quantity {
    font-size: 12px;
    color: #888;
    margin-right: 10px;
}

.portfolio-pnl {
    font-size: 13px;
    -unity-font-style: bold;
    min-width: 70px;
    -unity-text-align: middle-right;
}

.portfolio-pnl.profit {
    color: #4ade80;
}

.portfolio-pnl.loss {
    color: #ef4444;
}

/* =========================================
   中央：メインチャート
   ========================================= */
.center-panel {
    flex-grow: 1;
    flex-direction: column;
    margin-right: 15px;
}

.chart-container {
    flex-grow: 1;
    background-color: rgba(8, 8, 10, 0.9);
    border-width: 1px;
    border-color: #1a1a1f;
    position: relative;
    overflow: hidden;
}

.chart-header {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 15px 20px;
    background-color: rgba(0, 0, 0, 0.5);
    border-bottom-width: 1px;
    border-bottom-color: #1a1a1f;
}

.chart-stock-info {
    flex-direction: row;
    align-items: center;
}

.chart-stock-code {
    font-size: 24px;
    color: white;
    -unity-font-style: bold;
    letter-spacing: 2px;
    margin-right: 15px;
}

.chart-stock-name {
    font-size: 14px;
    color: #888;
}

.chart-price-info {
    align-items: flex-end;
}

.chart-current-price {
    font-size: 32px;
    color: #4ade80;
    -unity-font-style: bold;
    letter-spacing: 1px;
}

.chart-current-price.negative {
    color: #ef4444;
}

.chart-change {
    font-size: 16px;
    color: #4ade80;
    margin-top: 3px;
}

.chart-change.negative {
    color: #ef4444;
}

/* チャート描画エリア */
.chart-canvas {
    flex-grow: 1;
    margin: 20px;
    position: relative;
}

/* グリッドライン */
.chart-grid {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}

.grid-line-h {
    position: absolute;
    left: 0;
    right: 0;
    height: 1px;
    background-color: rgba(255, 255, 255, 0.05);
}

.grid-line-v {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 1px;
    background-color: rgba(255, 255, 255, 0.05);
}

/* 株価ライン（VectorAPIで描画するが、スタイル用） */
.chart-line {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}

/* チャート下部情報 */
.chart-footer {
    flex-direction: row;
    justify-content: space-between;
    padding: 10px 20px;
    background-color: rgba(0, 0, 0, 0.3);
    border-top-width: 1px;
    border-top-color: #1a1a1f;
}

.chart-stat {
    align-items: center;
}

.chart-stat-label {
    font-size: 10px;
    color: #555;
    letter-spacing: 2px;
}

.chart-stat-value {
    font-size: 14px;
    color: #ccc;
    margin-top: 3px;
}

/* =========================================
   売買パネル
   ========================================= */
.trade-panel {
    flex-direction: row;
    padding: 15px;
    background-color: rgba(10, 10, 12, 0.9);
    border-width: 1px;
    border-color: #1a1a1f;
    margin-top: 15px;
}

.trade-input-area {
    flex-grow: 1;
    flex-direction: row;
    align-items: center;
    margin-right: 15px;
}

.trade-label {
    font-size: 12px;
    color: #888;
    margin-right: 10px;
}

.trade-quantity-input {
    width: 100px;
    height: 40px;
    background-color: #111114;
    border-width: 1px;
    border-color: #333;
    color: white;
    font-size: 16px;
    -unity-text-align: middle-center;
    margin-right: 10px;
}

.trade-quantity-input:focus {
    border-color: #ff5000;
}

.quick-quantity-btn {
    height: 40px;
    padding: 0 15px;
    background-color: #1a1a20;
    border-width: 1px;
    border-color: #333;
    color: #888;
    font-size: 12px;
    margin-right: 5px;
    transition-property: background-color, color, border-color;
    transition-duration: 0.1s;
}

.quick-quantity-btn:hover {
    background-color: #252530;
    color: white;
    border-color: #555;
}

.trade-buttons {
    flex-direction: row;
}

.buy-btn {
    width: 120px;
    height: 50px;
    background-color: rgba(74, 222, 128, 0.15);
    border-width: 2px;
    border-color: #4ade80;
    color: #4ade80;
    font-size: 18px;
    -unity-font-style: bold;
    letter-spacing: 2px;
    margin-right: 10px;
    transition-property: background-color, scale;
    transition-duration: 0.1s;
}

.buy-btn:hover {
    background-color: #4ade80;
    color: #000;
}

.buy-btn:active {
    scale: 0.97;
}

.buy-btn:disabled {
    background-color: rgba(74, 222, 128, 0.05);
    border-color: #333;
    color: #444;
}

.sell-btn {
    width: 120px;
    height: 50px;
    background-color: rgba(239, 68, 68, 0.15);
    border-width: 2px;
    border-color: #ef4444;
    color: #ef4444;
    font-size: 18px;
    -unity-font-style: bold;
    letter-spacing: 2px;
    transition-property: background-color, scale;
    transition-duration: 0.1s;
}

.sell-btn:hover {
    background-color: #ef4444;
    color: #000;
}

.sell-btn:active {
    scale: 0.97;
}

.sell-btn:disabled {
    background-color: rgba(239, 68, 68, 0.05);
    border-color: #333;
    color: #444;
}

/* 利確/損切り表示 */
.sell-btn.profit-mode {
    border-color: #4ade80;
    color: #4ade80;
    background-color: rgba(74, 222, 128, 0.15);
}

.sell-btn.loss-mode {
    border-color: #ef4444;
    color: #ef4444;
    background-color: rgba(239, 68, 68, 0.15);
}

/* =========================================
   右パネル：銘柄リスト
   ========================================= */
.right-panel {
    width: 280px;
    flex-direction: column;
}

.stock-list-panel {
    flex-grow: 1;
    background-color: rgba(10, 10, 12, 0.8);
    border-width: 1px;
    border-color: #1a1a1f;
    border-left-width: 3px;
    border-left-color: #ff5000;
}

.stock-list-header {
    flex-direction: row;
    justify-content: space-between;
    padding: 12px 15px;
    background-color: rgba(0, 0, 0, 0.3);
    border-bottom-width: 1px;
    border-bottom-color: #1a1a1f;
}

.stock-list-title {
    font-size: 11px;
    color: #555;
    letter-spacing: 3px;
}

.stock-list {
    flex-grow: 1;
    padding: 5px;
}

/* 銘柄アイテム */
.stock-item {
    flex-direction: row;
    align-items: center;
    padding: 12px 10px;
    margin-bottom: 2px;
    background-color: transparent;
    border-left-width: 3px;
    border-left-color: transparent;
    transition-property: background-color, border-left-color;
    transition-duration: 0.15s;
}

.stock-item:hover {
    background-color: rgba(255, 255, 255, 0.03);
}

.stock-item:selected {
    background-color: rgba(255, 80, 0, 0.1);
    border-left-color: #ff5000;
}

.stock-item.locked {
    opacity: 0.4;
}

.stock-logo {
    width: 36px;
    height: 36px;
    background-color: #1a1a1f;
    margin-right: 12px;
    border-width: 1px;
    border-color: #333;
}

.stock-info {
    flex-grow: 1;
}

.stock-code {
    font-size: 14px;
    color: white;
    -unity-font-style: bold;
    letter-spacing: 1px;
}

.stock-name {
    font-size: 11px;
    color: #666;
    margin-top: 2px;
}

.stock-price-area {
    align-items: flex-end;
    min-width: 80px;
}

.stock-price {
    font-size: 14px;
    color: #ccc;
    -unity-font-style: bold;
}

.stock-change {
    font-size: 12px;
    margin-top: 2px;
}

.stock-change.positive {
    color: #4ade80;
}

.stock-change.negative {
    color: #ef4444;
}

/* 点滅アニメーション */
.stock-item.flash-green {
    background-color: rgba(74, 222, 128, 0.2);
}

.stock-item.flash-red {
    background-color: rgba(239, 68, 68, 0.2);
}

/* =========================================
   スキルパネル（イカサマ）
   ========================================= */
.skill-panel {
    background-color: rgba(10, 10, 12, 0.8);
    border-width: 1px;
    border-color: #1a1a1f;
    border-left-width: 3px;
    border-left-color: #a855f7;
    padding: 15px;
    margin-top: 15px;
}

.skill-btn {
    height: 45px;
    background-color: rgba(168, 85, 247, 0.1);
    border-width: 1px;
    border-color: #a855f7;
    color: #a855f7;
    font-size: 13px;
    -unity-font-style: bold;
    letter-spacing: 1px;
    margin-bottom: 8px;
    transition-property: background-color, color;
    transition-duration: 0.15s;
}

.skill-btn:hover {
    background-color: #a855f7;
    color: white;
}

.skill-btn:disabled {
    background-color: transparent;
    border-color: #333;
    color: #444;
}

.skill-cooldown {
    font-size: 11px;
    color: #666;
    -unity-text-align: middle-center;
}

/* =========================================
   カットイン演出（BUY! / SELL!）
   ========================================= */
.cut-in-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    justify-content: center;
    align-items: center;
    background-color: rgba(0, 0, 0, 0.5);
    opacity: 0;
    display: none;
}

.cut-in-overlay.visible {
    display: flex;
    opacity: 1;
}

.cut-in-text {
    font-size: 120px;
    -unity-font-style: bold;
    letter-spacing: 20px;
    text-shadow: 0 0 50px currentColor;
}

.cut-in-text.buy {
    color: #4ade80;
}

.cut-in-text.sell {
    color: #ef4444;
}

/* =========================================
   暴落演出（ノイズ）
   ========================================= */
.crash-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(239, 68, 68, 0.1);
    opacity: 0;
}

.crash-overlay.active {
    opacity: 1;
}

/* =========================================
   損切り演出（モノクロ）
   ========================================= */
.loss-cut-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.8);
    opacity: 0;
    transition-property: opacity;
    transition-duration: 0.3s;
}

.loss-cut-overlay.active {
    opacity: 1;
}

/* =========================================
   スクロールバー
   ========================================= */
.unity-scroller--vertical {
    width: 4px;
    border: none;
    background-color: transparent;
}

.unity-scroller--vertical .unity-base-slider__tracker {
    background-color: rgba(255, 255, 255, 0.03);
    border: none;
}

.unity-scroller--vertical .unity-base-slider__dragger {
    background-color: rgba(255, 80, 0, 0.4);
    width: 4px;
    border-radius: 2px;
}

/* =========================================
   ローディング・空状態
   ========================================= */
.loading-state {
    flex-grow: 1;
    justify-content: center;
    align-items: center;
}

.loading-text {
    font-size: 16px;
    color: #555;
    letter-spacing: 4px;
}

.empty-portfolio {
    padding: 20px;
    -unity-text-align: middle-center;
}

.empty-portfolio-text {
    font-size: 12px;
    color: #555;
}
